<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="LoginButtton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>

    <style name="EmailInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/email_icon</item>
        <item name="android:hint">@string/user_name_hint</item>
    </style>

    <style name="PasswordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/password_icon</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="endIconMode">password_toggle</item>
        <item name="helperTextEnabled">true </item>
        <item name="counterEnabled">true</item>
        <item name="counterTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="counterMaxLength">8</item>
        <item name="helperTextTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="helperText">@string/password_help</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="StarIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="TextAppearance.Category" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="membershipCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="checkbox">
        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
    </style>

</resources>
