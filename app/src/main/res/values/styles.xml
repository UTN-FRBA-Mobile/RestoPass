<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="LoginButtton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>

    <style name="EmailInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/email_icon</item>
        <item name="android:hint">@string/user_name_hint</item>
    </style>

    <style name="PasswordInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="startIconDrawable">@drawable/password_icon</item>
        <item name="android:hint">@string/password_hint</item>
        <item name="endIconMode">password_toggle</item>
        <item name="helperTextEnabled">true </item>
        <item name="counterEnabled">true</item>
        <item name="counterTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="counterMaxLength">8</item>
        <item name="helperTextTextAppearance">?attr/textAppearanceSubtitle2</item>
        <item name="helperText">@string/password_help</item>
    </style>

    <style name="FirstNameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/first_name_hint</item>
    </style>

    <style name="LastNameInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/last_name_hint</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.MaterialComponents.Body2">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="StarIcon">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>

    <style name="HalfStarIcon" parent="StarIcon">
        <item name="android:src">@drawable/ic_half_star</item>
    </style>

    <!-- Settings Fragment -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/dividerVertical</item>
    </style>

    <style name="TextAppearance.Category" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="logoutButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/logout</item>
    </style>

    <!-- Membership Fragment -->
    <style name="membershipCard">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="priceTag">
        <item name="android:background">@drawable/price_round_corner</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffff</item>
    </style>

    <style name="membershipTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="membershipImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:contentDescription">@string/membership_image_description</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="membershipDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="membershipDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="membershipDetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
    </style>

    <style name="membershipDetailsAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="alertTittle">
        <item name="android:text">@string/alertTitle</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="alertMessage">
        <item name="android:text">@string/alertMessage</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:progressBarStyle">?android:attr/progressBarStyleLarge</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Refresh Error -->
    <style name="refreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/restoPassGreen</item>
    </style>
    <style name="checkbox">
        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
    </style>

</resources>
