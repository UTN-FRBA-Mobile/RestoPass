<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reservation_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginStart="5dp"
        android:animateLayoutChanges="true"
        >

        <ImageView
            android:id="@+id/reservation_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/reservation_title"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label"
            android:layout_margin="15dp"
            android:layout_width="match_parent" />


        <TextView
            android:id="@+id/reservation_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/reservation_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="6dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#fff"
        android:animateLayoutChanges="true"
        >

        <TextView
            android:id="@+id/reservation_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.25"
            />

        <TextView
            android:id="@+id/reservation_invitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:layout_gravity="start"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/reservation_arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_down_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reservation_diners_module"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/reservation_diners_confirmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/LabelSecondary"
            />

        <TextView
            android:id="@+id/reservation_diners_confirm"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/reservation_diners_toConfirmTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:textAppearance="@style/LabelSecondary"
            />

        <TextView
            android:id="@+id/reservation_diners_toConfirm"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            />

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginStart="5dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reservation_action"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/qr_button"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            />

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>