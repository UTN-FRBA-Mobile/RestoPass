<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.map.MapFragment"
    android:layout_above="@+id/nav_view"
    android:orientation="vertical">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".main.MainActivity"
            tools:layout="@layout/dummy_mapp">
        </fragment>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="20dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">
                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/mirutaki"
                                    android:id="@+id/resto_image"
                                    android:scaleType="centerCrop"
                                    android:layout_marginEnd="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/resto_name"
                                    android:text="@string/resto_card_text"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:layout_toEndOf="@id/resto_image" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentEnd="true">
                                        <ImageView
                                           style="@style/StarIcon" />
                                        <ImageView
                                           style="@style/StarIcon" />
                                        <ImageView
                                           style="@style/StarIcon" />
                                        <ImageView
                                           style="@style/StarIcon" />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/resto_address"
                                    android:textSize="15sp"
                                    android:text="Incluido"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toEndOf="@id/resto_image"
                                    android:textColor="#4caf50"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Abierto"
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"/>
                        </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

</RelativeLayout>