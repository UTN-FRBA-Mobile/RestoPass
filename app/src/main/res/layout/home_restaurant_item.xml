<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:backgroundTint="#ffff"
    android:layout_marginHorizontal="8dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/restaurantImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_corner"
        android:contentDescription="@string/restaurantImage"
        android:scaleType="centerCrop"
        android:src="@drawable/mirutaki" />

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/zarasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:lines="2"
            android:text="La Causa Nikkei"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantName"
            android:layout_marginBottom="5dp"
            android:text="Av Callo 1260, CABA" />

        <LinearLayout
            android:id="@+id/restaurantStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantAddress"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                style="@style/StarIcon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/star2"
                style="@style/StarIcon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/star3"
                style="@style/StarIcon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/star4"
                style="@style/StarIcon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/star5"
                style="@style/StarIcon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/halfStar"
                style="@style/HalfStarIcon"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/restaurantDishes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantStars"
            android:text="@string/available_dishes_plural"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>
