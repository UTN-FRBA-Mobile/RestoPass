<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical">

    <!-- Step One -->
    <LinearLayout
        android:id="@+id/stepOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/restopass_titless" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/aboutFirstStepTitle"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textFontWeight="500"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/rubik"
                    android:letterSpacing=".05"
                    android:lineHeight="24dp"
                    android:text="@string/aboutFirstStepDescription"
                    android:textAlignment="center"
                    android:textColor="#888"
                    android:textStyle="bold"
                    android:textSize="16dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/skipButton"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@id/continueButton"
                    android:gravity="center_vertical"
                    android:text="Saltear" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueButton"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:text="Comenzar"
                    android:textColor="@color/restoPassGreen"
                    app:cornerRadius="18dp"
                    app:strokeColor="@color/restoPassGreen" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Step Two -->
    <LinearLayout
        android:id="@+id/stepTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dish_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/aboutSecondStepTitle"
                android:textAlignment="center"
                android:textColor="#444444"
                android:textFontWeight="500"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik"
                android:letterSpacing=".05"
                android:lineHeight="24dp"
                android:text="@string/aboutSecondStepDescription"
                android:textAlignment="center"
                android:textColor="#888"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backButtonStepTwo"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@id/continueButtonStepTwo"
                    android:gravity="center_vertical"
                    android:text="Anterior" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueButtonStepTwo"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:text="Siguiente"
                    android:textColor="@color/restoPassGreen"
                    app:cornerRadius="18dp"
                    app:strokeColor="@color/restoPassGreen" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Step Three -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/stepThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/booking_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/aboutThirdStepTitle"
                android:textAlignment="center"
                android:textColor="#444444"
                android:textFontWeight="500"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rubik"
                android:letterSpacing=".05"
                android:lineHeight="24dp"
                android:text="@string/aboutThirdStepDescription"
                android:textAlignment="center"
                android:textColor="#888"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backButtonStepThree"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@id/doneButtonStepThree"
                    android:gravity="center_vertical"
                    android:text="Anterior" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/doneButtonStepThree"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:text="Listo"
                    android:textColor="@color/restoPassGreen"
                    app:cornerRadius="18dp"
                    app:strokeColor="@color/restoPassGreen" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>