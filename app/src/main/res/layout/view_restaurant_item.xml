<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/restaurantImageParent"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/restaurantImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner"
            android:contentDescription="@string/restaurantImage"
            android:scaleType="centerCrop"
            android:src="@drawable/mirutaki"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/zarasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:text="La Causa Nikkei"

            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <TextView
            android:id="@+id/restaurantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantName"
            android:layout_marginBottom="5dp"
            android:text="Av Callo 1260, CABA" />

        <LinearLayout
            android:id="@+id/restaurantStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantAddress"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                style="@style/StarIcon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star2"
                style="@style/StarIcon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star3"
                style="@style/StarIcon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star4"
                style="@style/StarIcon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star5"
                style="@style/StarIcon"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/restaurantDishes"
            android:layout_below="@id/restaurantStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="@string/available_dishes_plural"/>

        <Button
            android:layout_below="@id/restaurantDishes"
            android:layout_width="wrap_content"
            android:text="Ver mÃ¡s"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</LinearLayout>